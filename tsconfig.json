{
  "extends": "@tsconfig/node14/tsconfig.json",
  "include": [
    "packages/*/src/**/*.ts"
  ],
  "compilerOptions": {
    "moduleResolution": "Node",
    "paths": {
      "selderee/*": ["./packages/selderee/src/*"],
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "ESNext",
      "esModuleInterop": true,
      "moduleResolution": "Node"
    }
  }
}
